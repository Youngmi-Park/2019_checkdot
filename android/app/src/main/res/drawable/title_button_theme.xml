<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#4c4c4c"/>
            <!--           <stroke android:color="#929292" android:width="1dp"/>-->
            <corners android:radius="8dp" android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"/>

        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <solid android:color="#a6a6a6"/>
            <corners android:radius="8dp"/>
            <corners android:topLeftRadius="8dp"/>
            <corners android:topRightRadius="8dp"/>
            <corners android:bottomLeftRadius="0dp"/>
            <corners android:bottomRightRadius="0dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#a6a6a6"/>
            <corners android:radius="8dp"/>
            <corners android:topLeftRadius="8dp"/>
            <corners android:topRightRadius="8dp"/>
            <corners android:bottomLeftRadius="0dp"/>
            <corners android:bottomRightRadius="0dp"/>
        </shape>
    </item>
</selector>